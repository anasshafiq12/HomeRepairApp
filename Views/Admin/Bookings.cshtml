@model List<Booking>
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .booking-summary {
            cursor: pointer;
        }
        .booking-details {
            display: none;
        }
        .booking-card {
            border-left: 5px solid #0d6efd;
            transition: box-shadow 0.3s;
        }
        .booking-card:hover {
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Booking List</h2>
        <div class="list-group">
            @foreach (var booking in Model)
            {
                <div class="booking-card p-3 mb-3 bg-light rounded">
                    <div class="booking-summary d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#details1">
                    <div>
                        <h5 class="mb-0">@booking.Name</h5>
                        <small class="text-muted">City: @booking.City</small>
                    </div>
                    <span class="text-primary">View Details</span>
                </div>
                <div id="details1" class="booking-details collapse mt-3">
                    <p><strong>Phone:</strong> @booking.Phone</p>
                    <p><strong>Address:</strong> @booking.Address</p>
                    <p><strong>Date:</strong> @booking.Date</p>
                    <p><strong>Time:</strong> @booking.Time</p>
                    <p><strong>Subject:</strong> @booking.Subject</p>
                    <p><strong>Message:</strong> @booking.Message .</p>
                </div>
            </div>
            }
        </div>
    </div>
</body>
</html>

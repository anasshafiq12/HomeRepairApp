<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .dashboard-sidebar {
          height: 100vh;
          background-color: #f8f9fa;
        }
        .dashboard-sidebar a {
          text-decoration: none;
          color: #495057;
          padding: 10px;
          display: block;
        }
        .dashboard-sidebar a.active {
          background-color: #e9ecef;
          font-weight: bold;
        }
        .card-title {
          font-size: 1.25rem;
        }
        .card-small {
          text-align: center;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-md-block dashboard-sidebar">
                <div class="position-sticky">
                    <div class="p-3">
                        <h4>Able <sup>pro</sup></h4>
                        <div class="d-flex align-items-center mb-3">
                            <img src="https://via.placeholder.com/40" alt="Profile Picture" class="rounded-circle">
                            <div class="ms-3">
                                <span>John Smith</span><br>
                                <small class="text-muted">Administrator</small>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <a href="#" class="active">Dashboard</a>
                    <a href="/Admin/Bookings">Bookings</a>
                    <a href="/Admin/AddItem">Add Items</a>
                    <a href="#">Finance</a>
                    <a href="#">Layouts</a>
                </div>
            </nav>
            <!-- Main Content -->
            <main class="col-md-10">
                <div class="container mt-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h1>Dashboard</h1>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="card card-small p-3">
                                <div class="card-body">
                                    <h5 class="card-title">All Earnings</h5>
                                    <p class="card-text display-6">$3,020</p>
                                    <p class="text-success">+30.6%</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card card-small p-3">
                                <div class="card-body">
                                    <h5 class="card-title">Page Views</h5>
                                    <p class="card-text display-6">290K+</p>
                                    <p class="text-warning">+30.6%</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card card-small p-3">
                                <div class="card-body">
                                    <h5 class="card-title">Total Task</h5>
                                    <p class="card-text display-6">839</p>
                                    <p class="text-success">New</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card card-small p-3">
                                <div class="card-body">
                                    <h5 class="card-title">Download</h5>
                                    <p class="card-text display-6">2,067</p>
                                    <p class="text-danger">+30.6%</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

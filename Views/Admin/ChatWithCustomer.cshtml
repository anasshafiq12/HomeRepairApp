@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <style>
        .chat-container {
            max-width: 1200px;
            height: 90vh;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        .sidebar {
            background: #f8f9fa;
            border-right: 1px solid #dee2e6;
            height: 100%;
        }
        .chat-item {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            cursor: pointer;
            transition: background 0.3s;
        }
        .chat-item:hover {
            background: #f1f1f1;
        }
        .chat-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
        }
        .chat-main {
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        .chat-header {
            padding: 20px;
            border-bottom: 1px solid #dee2e6;
        }
        .chat-messages {
            flex-grow: 1;
            overflow-y: auto;
            max-height: 60vh;
            padding: 20px;
        }
        .message {
            max-width: 70%;
            margin-bottom: 20px;
        }
        .message-content {
            padding: 10px 15px;
            border-radius: 15px;
        }
        .received .message-content {
            background: #f1f1f1;
        }
        .sent .message-content {
            background: #6c5ce7;
            color: white;
        }
        .chat-input {
            padding: 20px;
            border-top: 1px solid #dee2e6;
        }

        .chat-messages::-webkit-scrollbar {
            width: 6px;
        }

        .chat-messages::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .chat-messages::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 3px;
        }

            .chat-messages::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    </style>
</head>g

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Order>

<div class="container mt-5">
    <h1 class="text-center mb-4">Booking List</h1>
    <table class="table table-bordered table-hover">
        <thead class="btn-green">
            <tr>
                <th>Order Id</th>
                <th>User Id</th>
                <th>User Name</th>
                <th>User Email</th>
                <th>View Details</th>
                <th>Delete Booking</th>
            </tr>
        </thead>
        <tbody id="bookingTable">
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.User.Id</td>
                    <td>@order.User.Name</td>
                    <td>@order.User.Email</td>
                    <td>
                        <button class="btn btn-primary view-details"
                                data-bs-toggle="modal"
                                data-bs-target="#bookingDetailsModal"
                                data-orderid="@order.OrderId"
                                data-name="@order.User.Name"
                                data-phone="@order.User.Phone"
                                data-address="@order.User.Address"
                                data-cartitems='@Newtonsoft.Json.JsonConvert.SerializeObject(order.cartItems)'>
                            View Details
                        </button>
                    </td>
                    <td>
                        <form method="post" asp-action="Delete" asp-controller="Admin" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <input type="hidden" name="id" value="@order.OrderId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Booking Details Modal -->
<div class="modal fade" id="bookingDetailsModal" tabindex="-1" aria-labelledby="bookingDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingDetailsModalLabel">Booking Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Order ID:</strong> <span id="modalId"></span></p>
                <p><strong>Name:</strong> <span id="modalName"></span></p>
                <p><strong>Phone:</strong> <span id="modalPhone"></span></p>
                <p><strong>Address:</strong> <span id="modalAddress"></span></p>

                <h5>Cart Items:</h5>
                <ul id="modalCartItems" class="list-group"></ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const bookingTable = document.getElementById('bookingTable');
        bookingTable.addEventListener('click', (event) => {
            const button = event.target.closest('.view-details');
            if (button) {
                // Populate basic details
                document.getElementById('modalId').textContent = button.dataset.orderid;
                document.getElementById('modalName').textContent = button.dataset.name;
                document.getElementById('modalPhone').textContent = button.dataset.phone;
                document.getElementById('modalAddress').textContent = button.dataset.address;

                // Parse and render cart items
                const cartItems = JSON.parse(button.dataset.cartitems);
                const modalCartItems = document.getElementById('modalCartItems');
                modalCartItems.innerHTML = ''; // Clear previous items
                cartItems.forEach(item => {
                    const listItem = document.createElement('li');
                    listItem.className = 'list-group-item';
                    listItem.textContent = `${item.Name} - ${item.SelectedQuantityByUser} x ${item.Price} = ${item.SelectedQuantityByUser * item.Price}`;
                    modalCartItems.appendChild(listItem);
                });
            }
        });
    });
</script>

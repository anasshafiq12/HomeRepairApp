<div class="container my-5 cartbody">
    <div class="row">
        <div class="col-md-8">
            <div class="cart-item d-flex align-items-center">
                <img src="~/images/ac.jpg" alt="Product" class="product-image me-3">
                <div class="flex-grow-1">
                    <h6 class="mb-1">Gree Air Conditioner</h6>
                    <p class="mb-1 text-muted">Color: Blue | Size: 2-Ton</p>
                    <p class="mb-1 text-muted">$200.50</p>
                </div>
                <div class="d-flex align-items-center">
                    <form asp-action="" asp-controller="" method="post" id="quantityform">
                        <label for="quantity">Quantity</label>
                        <input type="number" max="10" min="1" name="quantity" id="quantity" value="1" />
                    </form>
                </div>
                <div class="ms-3 total-price">$401.00</div>
            </div>

            <div class="cart-item d-flex align-items-center">
                <img src="~/images/led.jpg" alt="Product" class="product-image me-3">
                <div class="flex-grow-1">
                    <h6 class="mb-1">TCL Led</h6>
                    <p class="mb-1 text-muted">Color: Black | Size: 34 Inch</p>
                    <p class="mb-1 text-muted">$150.50</p>
                </div>
                <div class="d-flex align-items-center">
                    <form asp-action="" asp-controller="" method="post" id="quantityform">
                        <label for="quantity">Quantity</label>
                        <input type="number" max="10" min="1" name="quantity" id="quantity" value="1" />
                    </form>
                </div>
                <div class="ms-3 total-price">$150.50</div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="coupon-section top">
                <h5>Apply Coupon</h5>
                <input type="text" class="form-control my-3" placeholder="Coupon Code">
                <button class="btn btn-dark w-100">Apply</button>
            </div>
            <div class="mt-3">
                <button class="btn cart-total-btn w-100">Cart Total: $551.50</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('quantity').addEventListener('change', function () {
        document.getElementById('quantityForm').submit();
    });
</script>
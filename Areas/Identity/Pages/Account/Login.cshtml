@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid hero-section">
    <div class="hero-overlay">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6 text-white d-none d-md-inline-block">
                    <h1 class="display-4">Expert Care for Every Pipe in Your Home</h1>
                    <p class="lead">Efficient plumbing solutions delivered with seamless, professional service from start to finish.</p>
                    <a href="#" class="btn btn-green btn-lg  rounded-0 ">Discover More</a>
                </div>

                <div class="col-md-6">
                    <div class="form-section rounded-0">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="mb-3 d-flex flex-wrap gap-3">
                                <div class="flex-grow-1">
                                    <input asp-for="Input.Email" id="emailInput" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="flex-grow-1">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="btn btn-green w-100 rounded-0">Log in</button>
                                <p class="text-center mt-2">Not have an account? <a href="./Register">Register</a></p>
                            </div>
                            <div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/chat.js" asp-append-version="true"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
